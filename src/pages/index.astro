---
import { Form } from 'components';
import Showcase from 'components/Banner/Showcase/Showcase.astro';
import { Toaster } from 'components/Toast/Toaster';
import MainBaner from '../components/Banner/Main/Main.astro';
---

<html lang="en">
  <head class="">
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <MainBaner />
    <Showcase />

    <section class="bg-yellow-400 py-10">
      <div class="flex flex-col lg:flex-row container-wrapper gap-6 justify-between">
        <div class="flex flex-col gap-2 max-w-[512px]">
          <h2 class="text-club-blue-900 text-5xl">Proyectos de ayuda</h2>
          <p class="text-gray-600">
            Llena el siguiente formulario y nuestro sistema agregara tu proyecto a nuestra base de datos para que pueda ser
            visto por otras organizaciones que pueden ayudarte o puedes contactarnos escribiendo al ejemplo@mail.com o llamando
            al 8888-8888
          </p>
        </div>
        <Form client:load />
      </div>
    </section>
    <Toaster client:load />
  </body>
</html>

<style is:global>
  .container-wrapper {
    @apply px-6 lg:mx-auto lg:max-w-[1080px] lg:px-16 xl:px-0;
  }
</style>
