---
import { CircleUserRound, Earth, HeartHandshake } from 'lucide-react';

interface IconsComponent {
  icons?: string;
}

const { icons } = Astro.props;
---

<div class="text-white grid gap-6 lg:gap-72 sm:grid-cols-2 lg:grid-cols-3 px-4">
  <div class="flex flex-col items-center sm:row-span-2 lg:row-span-1">
    <HeartHandshake className={icons} />
    <span class="mt-2 text-lg text-center">
      Ayudando a la juventud a lograr sus metas y ser personas integradas a la comunidad
    </span>
  </div>
  <div class="flex flex-col items-center">
    <CircleUserRound className={icons} />
    <span class="mt-2 text-lg text-center">
      Ayudando a la juventud a lograr sus metas y ser personas integradas a la comunidad
    </span>
  </div>
  <div class="flex flex-col items-center sm:col-span-2 lg:col-span-1">
    <Earth className={icons} />
    <span class="mt-2 text-lg text-center"> Generando un mundo mejor para la juventud </span>
  </div>
</div>
